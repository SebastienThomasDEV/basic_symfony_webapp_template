    <div class="container flex flex-col mx-auto bg-white rounded-lg pt-12 my-5">
        <div class="flex justify-center w-full h-full my-auto xl:gap-14 lg:justify-normal md:gap-5 draggable">
            <div class="flex items-center justify-center w-full lg:p-12">
                <div class="flex items-center xl:p-10">
                    <form class="flex flex-col w-full h-full pb-6 bg-white rounded-3xl" method="post" action="{{ path('app_register') }}">
                        <div class="flex items-center gap-3">
                            <a href="{{ path('app_home') }}">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9.75L14.25 12m0 0l2.25 2.25M14.25 12l2.25-2.25M14.25 12L12 14.25m-2.58 4.92l-6.375-6.375a1.125 1.125 0 010-1.59L9.42 4.83c.211-.211.498-.33.796-.33H19.5a2.25 2.25 0 012.25 2.25v10.5a2.25 2.25 0 01-2.25 2.25h-9.284c-.298 0-.585-.119-.796-.33z" />
                                </svg>
                            </a>
                            <h3 class="mb-1 text-4xl font-extrabold text-dark-grey-900">Register</h3>
                        </div>
                        <p class="mb-4 text-grey-700">Enter your email and password to register</p>
                        <label for="email" class="mb-2 text-sm text-start text-grey-900">Email<span class="text-red-500">*</span></label>
                        <input id="email" type="email" placeholder="mail@example.com" name="_email"
                               class="flex items-center w-full px-5 py-4 mr-2 text-sm font-medium outline-none focus:bg-grey-400 mb-7 placeholder:text-grey-700 bg-grey-200 text-dark-grey-900 rounded-2xl {% if response['email'] %}invalid-feedback{% endif %}"/>
                        <label for="password" class="mb-2 text-sm text-start text-grey-900">Password<span class="text-red-500">*</span></label>
                        <input id="password" type="password" placeholder="Enter a password" name="_password"
                               class="flex items-center w-full px-5 py-4 mb-5 mr-2 text-sm font-medium outline-none focus:bg-grey-400 placeholder:text-grey-700 bg-grey-200 text-dark-grey-900 rounded-2xl {% if response['password'] %}invalid-feedback{% endif %}" />
                        <input id="password" type="password" placeholder="Retype your password" name="_password_confirm"
                               class="flex items-center w-full px-5 py-4 mr-2 text-sm font-medium outline-none focus:bg-grey-400 placeholder:text-grey-700 bg-grey-200 text-dark-grey-900 rounded-2xl {% if response['password'] %}invalid-feedback{% endif %}" />
                        <span class="transition-colors duration-200 ease-in-out text-[1.075rem] font-small text-red-500">{{ response['email'] }}</span>
                        <span class="transition-colors duration-200 ease-in-out text-[1.075rem] font-small text-red-500">{{ response['password'] }}</span>
                        <button class="w-full px-6 py-5 mb-5 mt-5 text-sm font-bold leading-none text-white transition duration-300 md:w-96 rounded-2xl hover:bg-purple-blue-600 focus:ring-4 focus:ring-purple-blue-100 bg-purple-blue-500">
                            Register
                        </button>
                        <p class="text-sm leading-relaxed text-grey-900 text-center" >Already an account? <a
                                    href="{{ path('app_login') }}" class="font-bold text-grey-700">Log in</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
